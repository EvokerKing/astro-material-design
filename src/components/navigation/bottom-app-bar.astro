---
interface Props {
	id?: string,
	className?: string,
	slot?: string,
	style?: string
}

const { id, className, style, slot } = Astro.props
---

<div class:list={["main-container md-elevaton-2", className]} id={id} style={style} slot={slot}>
	<div class="icons">
  	  <slot name="icons" />
	</div>
    <slot name="fab" />
</div>

<style>
	.main-container {
        background: var(--md-color-surface-container);
        height: 80px;
		display: flex;
		flex-direction: row;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        position: absolute;
		bottom: 0;
		left: 0;
        padding: 0 16px 0 4px;
		box-sizing: border-box;
    }

	.main-container::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background:  var(--md-color-surface-tint);
        overflow: hidden;
		pointer-events: none;
	}

	.icons {
		display: flex;
		flex-direction: row;
        justify-content: center;
        align-items: center;
	}
</style>