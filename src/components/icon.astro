---
interface Props {
	color?: string,
	fill?: string,
	weight?: string,
	grade?: string,
	size?: string,
	style?: 'outlined' | 'rounded' | 'sharp',
	clearance?: string,
	slot?: string
}

const { color = 'var(--md-color-on-surface)', fill = '0', weight = '400', grade = '0', size = '24px', style = "outlined", clearance = '0', slot } = Astro.props
const materialClass = `material-symbols-${style}`
const fillNum = parseInt(fill)
const weightNum = parseInt(weight)
const gradeNum = parseInt(grade)
---

<span class={materialClass} slot={slot}><slot /><slot name="badge" /></span>

<style define:vars={{ fillNum, weightNum, gradeNum, size, color, clearance }}>
    @import "https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200";
    @import "https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200";
    @import "https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200";

	span {
		font-variation-settings:
		'FILL' var(--fillNum),
		'wght' var(--weightNum),
		'GRAD' var(--gradeNum);
		color: var(--color);
		padding: var(--clearance);
        font-size: var(--size);

        position: relative;
	}
</style>